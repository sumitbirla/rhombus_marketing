<style>
    .form-inline .control-label { width: 120px; }
</style>

<h2><%= @email_list.name %></h2>
<hr/>

<%= simple_form_for([:admin, :marketing, @email_list], html: { class: 'form-inline' }) do |f| %>

  <%= render 'admin/shared/error_messages', object: f.object %>

  <%= f.input :name %>
  <%= f.input :auto_subscribe %>
  <%= f.input :user_managable %>
  <%= f.input :description, as: :text, input_html: { class: 'span5', rows: 3 } %>
  
  <div class="form-actions">
  	<%= f.button :submit %>
  </div>
<% end %>


<% content_for :title do %>
    Email Lists: <%= @email_list.name %>
<% end %>

<% content_for :menu do
    render "admin/shared/marketing_menu"
end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Marketing</a></li>
	<li><%= link_to "Email Lists", admin_marketing_email_lists_path %></li>
	<li class="active"><%= @email_list.name %></li>
<% end %>
