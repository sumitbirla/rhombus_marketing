<h2>
	<%= link_to "new list", new_admin_marketing_email_list_path, class: 'btn btn-sm btn-default pull-right'%>
	Email Lists
</h2>

<%= will_paginate @email_lists %>
<table class="table table-striped table-condensed">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Subcribers</th>
		<th>Blasts</th>
		<th>Auto Subscribe</th>
		<th>User Managable</th>
		<th>&nbsp;</th>
	</tr>
	<% @email_lists.each do |list| %>
	<tr>
		<td><%= list.id %></td>
		<td><%= link_to list.name, edit_admin_marketing_email_list_path(list) %></td>
		<td><%= list.email_subscribers.length %></td>
		<td><%= list.email_blasts.length %></td>
		<td><%= tick list.auto_subscribe %></td>
		<td><%= tick list.user_managable %></td>
		<td>
			<%= link_to "edit", edit_admin_marketing_email_list_path(list) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: list.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>

<% content_for :title do %>
    Email Lists
<% end %>

<% content_for :menu do
    render "admin/shared/marketing_menu"
end %>

<% content_for :breadcrumbs do %>
	<li><a href="#">Marketing</a></li>
	<li class="active">Email Lists</li>
<% end %>
