<h2>
	<%= link_to "new subscriber", new_admin_marketing_email_subscriber_path, class: 'btn btn-sm btn-default pull-right'%>
	Email Subscribers
</h2>

<% unless params[:q].nil? %>
    <div class="alert alert-info">Found <%= @email_subscribers.total_entries %> records matching '<%= params[:q] %>'</div>
<% end %>

<table class="table table-striped table-condensed">
	<tr>
		<th>Email</th>
		<th>Opted-out</th>
		<th>Reported Spam</th>
		<th>Bounces</th>
		<th>Signed up</th>
		<th>&nbsp;</th>
	</tr>
	<% @email_subscribers.each do |subscriber| %>
	<tr>
		<td><%= link_to subscriber.email, edit_admin_marketing_email_subscriber_path(subscriber) %></td>
		<td><%= tick subscriber.opted_out %></td>
		<td><%= tick subscriber.reported_spam %></td>
		<td><%= subscriber.bounces %></td>
		<td><%= systime subscriber.created_at %></td>
		<td>
			<%= link_to "edit", edit_admin_marketing_email_subscriber_path(subscriber) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: subscriber.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<% content_for :title do %>
    Email Subscribers
<% end %>

<% content_for :menu do
    render "admin/shared/marketing_menu"
end %>

<% content_for :breadcrumbs do %>
	<li><a href="#">Marketing</a></li>
	<li class="active">Email Subscribers</li>
<% end %>
