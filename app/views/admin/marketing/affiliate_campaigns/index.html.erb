<h2>
	<%= link_to "new campaign", new_admin_marketing_affiliate_campaign_path, class: 'btn btn-sm btn-default pull-right'%>
	Affiliate Campaigns
</h2>

<%= will_paginate @affiliate_campaigns %>
<table class="table table-striped table-condensed">
	<tr>
		<th>ID</th>
		<th>Campaign</th>
		<th>Signup Commission</th>
		<th>Sale Commission</th>
    <th>Opens</th>
		<th>Raw clicks</th>
		<th>Unique clicks</th>
		<th>Signups</th>
		<th>Orders</th>
		<th>&nbsp;</th>
	</tr>
	<% @affiliate_campaigns.each do |campaign| %>
	<tr>
		<td><%= link_to campaign.id, edit_admin_marketing_affiliate_campaign_path(campaign) %></td>
		<td>
			<%= link_to campaign.affiliate, admin_system_affiliate_path(campaign.affiliate) %><br/>
			<%= campaign.name %>
		</td>
		<td>$<%= campaign.signup_commission %></td>
		<td><%= campaign.sale_commission %>%</td>
    <td><%= campaign.opens %></td>
		<td><%= campaign.raw_clicks %></td>
		<td><%= campaign.unique_clicks %></td>
		<td><%= campaign.signups %></td>
		<td><%= campaign.orders %></td>
		<td>
			<%= link_to "edit", edit_admin_marketing_affiliate_campaign_path(campaign) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: campaign.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<% content_for :title do %>
    Affiliate Campaigns
<% end %>

<% content_for :menu do
    render "admin/shared/marketing_menu"
end %>

<% content_for :breadcrumbs do %>
	<li><a href="#">Marketing</a></li>
	<li class="active">Affiliate Campaigns</li>
<% end %>
